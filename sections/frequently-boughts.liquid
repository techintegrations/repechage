<div class="mian-F-B-wrapper">
  <div class="main-F-B-heading">{{ section.settings['main-F-B-headings'] }}</div>
  <div class="main-F-B">
    <div class="products-wrapper-F-B">
      <div class="main-product">
        <div class="product-img-F-B">
          <img src="{{ product.featured_image | product_img_url:'master' }}">
        </div>
        <div class="main-product-info">
          <p class="Product-tag">This Product</p>
          <h3 class="product-heading">{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
        </div>
      </div>
      {% for block in section.blocks %}
        {% assign selected-product = block.settings['suggested-product'] %}
      {% if block.settings['suggested-product'] != blank %}
          <div class="suggested-product">
            <div class="product-img-F-B">
              <img src="{{ selected-product.featured_image | product_img_url:'master' }}">
            </div>
            <div class="main-product-info">
              <p class="Product-tag">Suggested Product</p>
              <h3 class="product-heading">{{ selected-product.title }}</h3>
              <p>{{ selected-product.price | money }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="F-B-info"></div>
  </div>
</div>
{% schema %}
{
  "name": "frequently-boughts",
  "settings": [
    {
      "type": "richtext",
      "id": "main-F-B-headings",
      "label": "Heading"
    }
  ],
  "blocks": [
 {
  "type": "product",
   "name": "Suggest Product",
  "settings": [
    {
      "type": "product",
      "id": "suggested-product",
      "label": "Suggested Product"
    }
  ],
 },
  ],
  "presets": [
    {
      "name": "Frequently Boughts"
    }
  ]
}
{% endschema %}

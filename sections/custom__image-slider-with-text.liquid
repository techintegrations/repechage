{% style %}
  #shopify-section-{{section.id}} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color: {{section.settings.bg_color}};
  }

  @media screen and (max-width:768px){
    #shopify-section-{{section.id}} {
      padding-top: {{ section.settings.padding_top_m }}px;
      padding-bottom: {{ section.settings.padding_bottom_m }}px;
    }
  }
{% endstyle %}

<div class="page-width">
  {%- if section.settings.title != blank -%}
    <div
      class="
        ingredients-title
        section-header
      "
    >
      <h2 class="text-{{ section.settings.align_text }}">{{ section.settings.title }}</h2>
    </div>
  {%- endif -%}

  <div class="vehicle-detail-banner banner-content clearfix">
    <div class="banner-slider">
      <div class="slider slider-for">
        {% for block in section.blocks %}
          <div class="slider-banner-image">
            <img
              src="https://images.unsplash.com/photo-1570942872213-1242607a35eb?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
              alt="Car-Image"
            >
          </div>
        {% endfor %}
      </div>
      <div class="slider slider-nav thumb-image">
        {% for block in section.blocks %}
          <div class="thumbnail-image">
            <div class="thumbImg">
              <img
                src="https://images.unsplash.com/photo-1570942872213-1242607a35eb?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
                alt="slider-img"
              >
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>

  $('.slider-for').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      fade: true,
      asNavFor: '.slider-nav'
  });
  $('.slider-nav').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      vertical:true,
      asNavFor: '.slider-for',
      dots: false,
      focusOnSelect: true,
      verticalSwiping:true
  });
</script>

{% schema %}
{
  "name": "Image slider with text",
  "class": "index-section image-slider-with-text-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:common.text_with_icons.settings.title.label"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "t:common.text_with_icons.settings.align_text.label",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "t:common.text_with_icons.settings.align_text.options.left.label"
        },
        {
          "value": "center",
          "label": "t:common.text_with_icons.settings.align_text.options.center.label"
        }
      ]
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color"
    },
    {
      "type": "range",
      "id": "desktop_columns_per_row",
      "label": "t:common.text_with_icons.settings.desktop_columns_per_row.label",
      "default": 3,
      "min": 2,
      "max": 4,
      "step": 1
    },
    {
      "type": "range",
      "id": "mobile_columns_per_row",
      "label": "Mobile columns per row",
      "default": 2,
      "min": 1,
      "max": 3,
      "step": 1
    },
    {
      "type": "color",
      "id": "block_title_color",
      "label": "Block title color"
    },
    {
      "type": "color",
      "id": "block_text_color",
      "label": "Block text color"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Spacing Desktop"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "Top spacing",
      "default": 0
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Bottom spacing",
      "default": 0
    },
    {
      "type": "header",
      "content": "Spacing Mobile"
    },
    {
      "type": "number",
      "id": "padding_top_m",
      "label": "Top spacing",
      "default": 0
    },
    {
      "type": "number",
      "id": "padding_bottom_m",
      "label": "Bottom spacing",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:common.text_with_icons.settings.divider.label",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "image_slider_block",
      "name": "t:common.text_with_icons.blocks.column.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Text Column"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:common.text_with_icons.blocks.column.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "t:common.text_with_icons.blocks.column.settings.text.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Read More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image slider with text",
      "blocks": [
        {
          "type": "image_slider_block"
        },
        {
          "type": "image_slider_block"
        },
        {
          "type": "image_slider_block"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
